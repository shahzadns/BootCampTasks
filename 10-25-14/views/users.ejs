<!DOCTYPE html>
<html>
<head>
    <title>Express Demo App</title>
    <link rel='stylesheet' href='/stylesheets/style.css'/>
</head>
<body>
<h1>Express Demo App</h1>
<p>Welcome to Express</p>
<br/>
<h2>Users</h2>
<a href="/users/sign-up">Add New User</a>
<div>
    <% if(users.length) {%>
    <table border="1" cellspacing="0">
        <thead>
        <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Created</th>
        </tr>
        </thead>
        <tbody>
        <% _.each(users, function(user){ %>
        <tr>
            <td><%= user.name %></td>
            <td><%= user.email %></td>
            <td><%= user.created %></td>
        </tr>
        <% }) %>
        </tbody>
    </table>
    <%} else {%>
    <p>No Users yet !</p>
    <%}%>
</div>
</body>
</html>
